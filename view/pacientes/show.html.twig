{% extends 'base.html.twig' %}

{% block body %}

<div class=" col s8 offset-s2">
    <div class="row">
        <div class="col s8 offset-s2">
            <div class="card hovercard">
                <div class="card-background">
                    
                </div>
                <div class="useravatar">
                    <img alt="" src="../../public/imgs/patient.png">
                </div>
                <div class="card-info"> <span class="card-title">{{ paciente.apellido }},  {{ paciente.nombre }} </span> </div>
            </div>
            <div>
                    <ul id="tabs-swipe-demo" class="tabs">
                            <li class="tab col s6"><a class="active" href="#test-swipe-1">Info personal</a></li>
                            <li class="tab col s6"><a href="#test-swipe-2">Datos demograficos</a></li>
                        </ul>
                        <div id="test-swipe-1" class="col s12">
                                <ul class="collection">
                                    <li class="collection-item">Fecha de nacimiento: {{ paciente.fecha_nacimiento }} </li>
                                    <li class="collection-item">GÃ©nero: {{ genero.nombre }} </li>
                                    <li class="collection-item">Tipo de documento: {{ tipo_doc.nombre }} </li>
                                    <li class="collection-item">DNI: {{ paciente.dni }} </li>
                                    <li class="collection-item">Domicilio: {{ paciente.domicilio }} </li>
                                    <li class="collection-item">Tel/Cel:
                                    {% if (paciente.telefono == null or paciente.telefono == 0)  %}
                                        <span> - - - </span>
                                    {% else %}
                                       <span> {{paciente.telefono}} </span>
                                    {% endif %} </li>
                                    <li class="collection-item">Obra social:
                                    {% if paciente.obra_social == null  %}
                                        <span> - - - </span>
                                    {% else %}
                                       <span> {{paciente.obra_social}} </span>
                                    {% endif %} </li>
                                </ul>
                        </div>
                        <div id="test-swipe-2" class="col s12">
                            <ul class="collection">
                                <li class="collection-item">
                                    Heladera?
                                    {% if paciente.heladera == 1  %}
                                       <span> Si </span>
                                    {% else %}
                                       <span> No </span>
                                    {% endif %}
                                </li>
                                <li class="collection-item">
                                    Electricidad?
                                    {% if paciente.electricidad == 1  %}
                                       <span> Si </span>
                                    {% else %}
                                       <span> No </span>
                                    {% endif %}
                                </li>
                                <li class="collection-item">
                                   Mascota(s)?
                                   {% if paciente.mascota == 1  %}
                                       <span> Si </span>
                                    {% else %}
                                       <span> No </span>
                                    {% endif %}
                                </li>
                                <li class="collection-item">Tipo de vivienda? {{ tipo_vivienda.nombre }}</li>
                                <li class="collection-item">Tipo de calefaccion? {{ tipo_calefaccion.nombre }} </li>
                                <li class="collection-item">Tipo de agua? {{ tipo_agua.nombre }} </li>
                            </ul>
                        </div>
            </div>
        </div>
</div>
</div>    
<div class="fixed-action-btn">
    <a class="btn-floating btn-large waves-effect waves-light icon-cyan" href="?controller=Pacientes&action=updatePaciente&idPaciente={{ paciente.idPaciente }}">
        <i class="large material-icons">edit</i>
    </a>
</div>       

{% endblock %}